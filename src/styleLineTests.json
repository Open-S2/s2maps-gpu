{
  "version": 1,
  "name": "s2test",
  "center": [0, 0],
  "zoom": 0,
  "minzoom": 0,
  "maxzoom": 20,
  "sources": {
    "fills": "http://localhost:8000/data/fills"
  },
  "shade": true,
  "wallpaper": {
    "background-color": "rgb(25, 28, 80)",
    "fade-1": "rgb(138, 204, 255)",
    "fade-2": "rgb(217, 255, 255)",
    "halo": "rgb(230, 255, 255)"
  },
  "sphere-background": {
    "background-color": [
      "input-range",
      "zoom",
      "expo",
      1.7,
      2.75,
      "rgb(244, 239, 226)",
      3,
      "rgb(245, 245, 245)",
      6,
      "rgb(245, 245, 245)",
      8.5,
      "rgb(236, 234, 231)",
      11,
      "rgb(248, 249, 250)"
    ]
  },
  "layers": [
    {
      "id": "water",
      "source": "fills",
      "filter": ["class", "!has", ["reef", "shoal"]],
      "layer": "water",
      "type": "fill",
      "minzoom": 0,
      "layout": {},
      "paint": {
        "color": "rgb(170, 218, 255)"
      }
    },
    {
      "id": "boundaries",
      "source": "fills",
      "layer": "boundary",
      "filter": ["and", ["class", "has", ["Country", "State"]], ["maritime", "==", false]],
      "type": "line",
      "minzoom": 0,
      "layout": {
        "cap": "butt",
        "join": "bevel"
      },
      "paint": {
        "color": [
          "data-condition",
          ["class", "==", "State"],
          "rgba(160, 160, 160, 0.7)",
          "default",
          "rgb(150, 150, 150)"
        ],
        "width": [
          "data-condition",
          ["class", "==", "State"],
          0.85,
          "default",
          [
            "input-range",
            "zoom",
            "lin",
            1,
            0.5,
            2,
            0.95
          ]
        ]
      }
    }
  ]
}
