{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext",
      "WebWorker"
    ],
    "outDir": "dist",
    "declarationDir": "dist",
    "declaration": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "module": "esnext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": [ /* Specify multiple folders that act like `./node_modules/@types`. */
      "./node_modules/@webgpu/types",
      "./node_modules/@types"
    ],
    "baseUrl": "s2",
    "paths": {    
      "*" : ["./*"],
      "@s2/*": ["./s2/*"],
      "@assets/*": ["./assets/*"],
      "@components/*": ["./components/*"],
      "@contexts/*": ["./contexts/*"],
      "@pages/*": ["./pages/*"],
      "@public/*": ["./public/*"],
      "@styles/*": ["./styles/*"]
    }
  },
  "include": [
    "types/*.d.ts",
    "s2/**/*.ts"
  ]
}
