{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext",
      "WebWorker"
    ],
    "checkJs": false,
    "strictNullChecks": true,
    "outDir": "dist",
    "declarationDir": "dist",
    "declaration": true,
    "skipLibCheck": true,
    "noEmit": false,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": ["@webgpu/types"],
    "baseUrl": "." /* Specify the base directory to resolve non-relative module names. */,
    "paths": {
      "*" : ["./*"],
      "s2/*": ["./s2/*"],
      "config/*": ["./config/*"],
      "gis-tools/*": ["./s2/gis-tools/*"],
      "gl/*": ["./s2/gl/*"],
      "gpu/*": ["./s2/gpu/*"],
      "plugins/*": ["./s2/plugins/*"],
      "source/*": ["./s2/source/*"],
      "style/*": ["./s2/style/*"],
      "ui/*": ["./s2/ui/*"],
      "util/*": ["./s2/util/*"],
      "workers/*": ["./s2/workers/*"]
    },
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "include": [
    "types/*.d.ts",
    "s2/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
