{
  // https://nuxt.com/docs/guide/concepts/typescript
  "extends": "./.nuxt/tsconfig.json",
  "esModuleInterop": true,
  "moduleResolution": "node",
  "compilerOptions": {
    "types": ["@webgpu/types"],
    "baseUrl": ".", // This must be specified if "paths" is.
    "paths": {    
      "*" : ["./*", "./s2/*"],
      "geometry/*": ["./s2/geometry/*"],
      "gl/*": ["./s2/gl/*"],
      "gpu/*": ["./s2/gpu/*"],
      "plugins/*": ["./s2/plugins/*"],
      "source/*": ["./s2/source/*"],
      "style/*": ["./s2/style/*"],
      "svg/*": ["./s2/svg/*"],
      "ui/*": ["./s2/ui/*"],
      "util/*": ["./s2/util/*"],
      "workers/*": ["./s2/workers/*"],
    }
  },
  "exclude": [
    "node_modules",
    "buildS2",
    "buildS2-dev",
    "buildS2-local",
    "buildS2-flat",
    "dist",
    "dist-types",
    "test",
    "examples",
    ".output"
  ]
}
