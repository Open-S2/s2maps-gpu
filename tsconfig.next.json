{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "DOM",
      "dom.iterable",
      "esnext",
      "WebWorker"
    ],
    "jsx": "preserve",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "module": "esnext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": [ /* Specify multiple folders that act like `./node_modules/@types`. */
      "./node_modules/@webgpu/types",
      "./node_modules/@types"
    ],
    "baseUrl": ".",
    "paths": {    
      "*" : ["./*", "./s2/*"],
      "@s2/*": ["./s2/*"],
      "@assets/*": ["./assets/*"],
      "@components/*": ["./components/*"],
      "@contexts/*": ["./contexts/*"],
      "@pages/*": ["./pages/*"],
      "@public/*": ["./public/*"],
      "@styles/*": ["./styles/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "types/*.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
