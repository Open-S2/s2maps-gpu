{
  "extends": "../../tsconfig.pkg.json",
  "compilerOptions": {
    "rootDir": "..",
    "baseUrl": "src",
    "typeRoots": ["../node_modules/@types"],
    "outDir": "../../build/ts",
    "tsBuildInfoFile": "./tsconfig.tsbuildinfo"
  },
  "exclude": [
    "src/docs.ts",
     "babel.config.*",
    "*/coverage/*",
    "**/*.test.ts",
    "node_modules",
    "build"
  ],
  "include": ["src/**/*.ts", "src/**/*.js", "glsl.ts", "wgsl.ts", "types.ts"]
}