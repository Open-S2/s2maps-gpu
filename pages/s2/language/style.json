{
  "version": 1,
  "name": "s2maps-language-simple",
  "center": [-90, 0],
  "zoom": -0.65,
  "bearing": 0,
  "minzoom": -1,
  "maxzoom": 2.5,
  "sources": {
    "language": "http://localhost:3000/s2json/language.s2json"
  },
  "layers": [
    {
      "name": "language_path",
      "source": "language",
      "filter": ["and", ["class", "==", "language"], ["level", "==", 4]],
      "type": "line",
      "layout": {
        "cap": "butt",
        "join": "bevel"
      },
      "paint": {
        "color": "#475569",
        "width": 3
      }
    }
  ]
}
